---
import Layout from "./Layout.astro";

// Supports being used by Markdown pages via frontmatter
const fm = (Astro.props as any)?.frontmatter ?? {};
const title: string = fm.title ?? "Legal";
const updated: string = fm.updated ?? "20 Jan 2024";
const intro: string =
  fm.intro ??
  "Your privacy is important to us at Duston Properties. We respect your privacy regarding any information we may collect from you across our website.";
---

<Layout>
  <section class="py-8 md:py-16 max-w-[768px] mx-auto">
    <div class="container mx-auto px-4 md:px-6 max-w-4xl text-center">
      <p class="text-body-sm md:text-body leading-body text-secondary">
        Current as of {updated}
      </p>
      <h1
        class="mt-3 text-h4 md:text-d1 leading-tight md:leading-[1.1] font-semibold text-primary"
      >
        {title}
      </h1>
      {
        intro && (
          <p class="mt-4 md:mt-6 text-body-sm md:text-body leading-body text-primary/80 max-w-3xl mx-auto">
            {intro}
          </p>
        )
      }
    </div>
  </section>

  <section class="pb-12 md:pb-24 max-w-[768px] mx-auto">
    <div
      class="prose prose-sm md:prose text-primary prose-h2:mb-1 prose-h2:mt-5 px-4 md:px-0"
    >
      <slot />
    </div>
  </section>
</Layout>
