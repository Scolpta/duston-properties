---
import Layout from "./Layout.astro";

// Supports being used by Markdown pages via frontmatter
const fm = (Astro.props as any)?.frontmatter ?? {};
const title: string = fm.title ?? "Legal";
const updated: string = fm.updated ?? "20 Jan 2024";
const intro: string =
  fm.intro ??
  "Your privacy is important to us at Duston Properties. We respect your privacy regarding any information we may collect from you across our website.";
---

<Layout>
  <section class="py-16 max-w-[768px] mx-auto">
    <div class="container mx-auto px-6 max-w-4xl text-center">
      <p class="text-body leading-body text-secondary">
        Current as of {updated}
      </p>
      <h1 class="mt-3 text-d1 leading-[1.1] font-semibold text-primary">
        {title}
      </h1>
      {
        intro && (
          <p class="mt-6 text-body leading-body text-primary/80 max-w-3xl mx-auto">
            {intro}
          </p>
        )
      }
    </div>
  </section>

  <section class="pb-24 max-w-[768px] mx-auto">
    <div class="legal-content text-primary">
      <slot />
    </div>
  </section>
</Layout>

<style>
  .legal-content h2 {
    margin-top: 2.5rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
    font-size: var(--text-h4);
    line-height: var(--leading-h4);
    color: var(--color-primary);
  }

  .legal-content h3 {
    margin-top: 2rem;
    margin-bottom: 0.5rem;
    font-weight: 600;
    font-size: var(--text-h5);
    line-height: var(--leading-h5);
    color: var(--color-primary);
  }

  .legal-content p {
    margin-top: 1rem;
    font-size: var(--text-body);
    line-height: var(--leading-body);
    color: color-mix(in srgb, var(--color-primary) 85%, transparent);
  }

  .legal-content ul,
  .legal-content ol {
    margin-top: 1rem;
    padding-left: 1.25rem;
  }

  .legal-content ul li {
    list-style: disc;
  }
  .legal-content ol li {
    list-style: decimal;
  }

  .legal-content a {
    color: var(--color-secondary);
    text-decoration: underline;
  }
</style>
