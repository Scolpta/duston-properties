---
import { Image } from "astro:assets";
import imageUrl from "../assets/contact.jpg?url";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section class="py-16">
    <div class="container mx-auto">
      <div class="mb-10">
        <h1 class="text-d2 leading-[78px] font-semibold text-primary">
          Whether you are seeking a new home, exploring investment
          opportunities, or partnering on a development, Duston is ready to
          shape whatâ€™s next with you.
        </h1>
      </div>

      <div class="mt-20 grid grid-cols-3 gap-10">
        <div>
          <h3 class="text-h6 font-semibold mb-4">Contact us</h3>
          <ul class="space-y-3 text-[15px] leading-6">
            <li>
              <a
                class="hover:underline"
                href="mailto:hello@dustonproperties.example"
                >hello@dustonproperties.example</a
              >
            </li>
            <li>
              <a class="hover:underline" href="tel:+233300001234"
                >+233 30 000 1234</a
              >
            </li>
          </ul>
        </div>
        <div>
          <h3 class="text-h6 font-semibold mb-4">Follow us</h3>
          <ul class="space-y-3 text-[15px] leading-6">
            <li><a class="hover:underline" href="#">Instagram</a></li>
            <li><a class="hover:underline" href="#">Facebook</a></li>
            <li><a class="hover:underline" href="#">LinkedIn</a></li>
          </ul>
        </div>

        <div>
          <h3 class="text-h6 font-semibold mb-4">Location</h3>
          <p class="text-[15px] leading-6">
            No 1 Fofo Link<br />
            North Dzorwulu,<br />
            Accra
          </p>
        </div>
      </div>
      <hr class="mt-16 text-[#D4CFCF]" />
    </div>
  </section>

  <section class="pb-20">
    <div class="container mx-auto">
      <div class="grid grid-cols-2 gap-20">
        <div class="flex flex-col">
          <h6 class="text-h3 font-semibold text-primary">Contact us</h6>
          <p>We invite you to connect with us.</p>

          <form class="mt-10">
            <div class="grid grid-cols-2 gap-10">
              <div class="col-span-2">
                <label for="name" class="text-base">Name</label>
                <input
                  type="text"
                  id="name"
                  class="w-full border border-gray-300 rounded-md p-2"
                />
              </div>
              <div>
                <label for="email" class="text-base">Email</label>
                <input
                  type="email"
                  id="email"
                  class="w-full border border-gray-300 rounded-md p-2"
                />
              </div>

              <div>
                <label for="phone" class="text-base">Phone</label>
                <input
                  type="tel"
                  id="phone"
                  class="w-full border border-gray-300 rounded-md p-2"
                />
              </div>

              <div class="col-span-2">
                <label for="phone" class="text-base">Title</label>
                <input
                  type="text"
                  id="title"
                  class="w-full border border-gray-300 rounded-md p-2"
                />
              </div>
              <div class="col-span-2">
                <label for="message" class="text-base">Message</label>
                <textarea
                  id="message"
                  class="w-full border border-gray-300 rounded-md p-2"
                ></textarea>
              </div>

              <div class="col-span-2 flex items-center gap-2">
                <input type="checkbox" name="terms" id="terms" class="size-4" />
                <label for="terms"
                  >I have read and agree to the <a
                    href="/terms-and-conditions"
                    class="underline">terms and conditions</a
                  ></label
                >
              </div>
            </div>

            <button
              type="submit"
              class="bg-primary text-white px-4 py-3 rounded-full w-full mt-10"
            >
              Submit
            </button>
          </form>
        </div>
        <div class="w-full h-[781px] rounded-lg overflow-hidden">
          <Image
            src={imageUrl}
            alt="Duston Properties"
            class="w-full h-full object-cover"
            width={1440}
            height={781}
          />
        </div>
      </div>
    </div>
  </section>
</Layout>
