---
import { Image } from "astro:assets";
import projectImg1 from "../assets/euphoria.webp?url";
import videoUrl from "../assets/hero_video.mp4?url";
import inspireImageUrl from "../assets/inspire.webp?url";
import projectImg2 from "../assets/livon.webp?url";
import projectImg3 from "../assets/petals.webp?url";
import imageUrl from "../assets/property.webp?url";
import InsightCard from "../components/InsightCard.astro";
import ProjectCard from "../components/ProjectCard.astro";
import Layout from "../layouts/Layout.astro";
import { getPostsQuery, type Post } from "../types";

const response = await fetch(import.meta.env.HYGRAPH_ENDPOINT, getPostsQuery);
const json = await response.json();

const posts: Post[] = json.data.posts;
---

<Layout>
  <section class="relative h-screen">
    <video
      src={videoUrl}
      autoplay
      muted
      loop
      playsinline
      class="absolute inset-0 w-full h-full object-cover"></video>
    <div class="absolute inset-0 bg-black/40"></div>

    <div class="relative z-10 h-full">
      <div
        class="container mx-auto px-4 md:px-6 h-full flex flex-col justify-between pb-15 md:pb-20"
      >
        <div class="max-w-[919px] h-full flex flex-col justify-center">
          <h1
            class="text-h4 md:text-d2 leading-tight md:leading-[78px] font-semibold text-white"
          >
            Shaping Experiences. Building for People. Creating Futures.
          </h1>
          <p
            class="text-body md:text-body-lg leading-[28px] md:leading-[32px] max-w-[586px] mt-4 text-white/90"
          >
            Discover residences, communities, and investment opportunities
            designed for a lasting impact.
          </p>

          <a
            href="/projects"
            class="text-primary cursor-pointer bg-white w-max py-3 px-5 font-medium rounded-full flex items-center gap-2 mt-6 md:mt-10"
          >
            Find a property

            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="#023542"
              stroke="white"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-primary"
              ><circle cx="12" cy="12" r="10"></circle><path d="m12 16 4-4-4-4"
              ></path><path d="M8 12h8"></path></svg
            >
          </a>
        </div>
        <p class="text-white max-w-[410px] text-body-lg">
          Discover residences, communities, and investment opportunities
          designed for a lasting impact.
        </p>
      </div>
    </div>
  </section>

  <section>
    <div class="container mx-auto px-4 md:px-6 py-8 md:py-20">
      <h3
        class="text-h4 md:text-d2 leading-tight md:leading-[78px] font-semibold text-primary"
      >
        We shape experiences and build timeless spaces that inspire belonging
        through innovation, elegance, and sustainability.
      </h3>

      <hr class="my-8 md:my-16 text-[#DBD5D5]" />
    </div>
  </section>

  <section class="pb-8 md:pb-12">
    <div
      class="container mx-auto px-4 md:px-6 flex flex-col md:flex-row justify-between gap-8 md:gap-12"
    >
      <div class="md:w-auto">
        <Image
          src={inspireImageUrl}
          alt="Inspire"
          class="w-full h-full object-cover rounded-lg"
          width={476}
          height={476}
        />
      </div>
      <div class="max-w-full md:max-w-[476px] flex flex-col gap-6 md:gap-10">
        <div>
          <h4 class="text-body-lg md:text-h6 font-semibold text-primary">
            People-Centered Design
          </h4>
          <p
            class="mt-2 text-primary/80 text-body-sm md:text-body leading-body"
          >
            Your comfort, lifestyle, and community come first. Every space is
            crafted to fit how you live, work, and connect.
          </p>
        </div>
        <div>
          <h4 class="text-body-lg md:text-h6 font-semibold text-primary">
            Future-Ready Innovation
          </h4>
          <p
            class="mt-2 text-primary/80 text-body-sm md:text-body leading-body"
          >
            Enjoy modern living today with designs that adapt to tomorrow. Smart
            layouts, cutting-edge features, and timeless style keep your
            investment relevant.
          </p>
        </div>
        <div>
          <h4 class="text-body-lg md:text-h6 font-semibold text-primary">
            Sustainable Practices
          </h4>
          <p
            class="mt-2 text-primary/80 text-body-sm md:text-body leading-body"
          >
            Live better while making a positive impact. Our eco-conscious
            choices mean healthier environments, lower costs, and communities
            built to last.
          </p>
        </div>
        <div>
          <h4 class="text-body-lg md:text-h6 font-semibold text-primary">
            Enduring Value
          </h4>
          <p
            class="mt-2 text-primary/80 text-body-sm md:text-body leading-body"
          >
            More than a property â€” it's long-term peace of mind. Our
            developments deliver appreciation, security, and a legacy you can
            count on.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section>
    <div class="container mx-auto px-4 md:px-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3 md:gap-4">
          <span class="size-4 md:size-5 rounded-full bg-secondary shrink-0"
          ></span>
          <h6 class="text-body-sm md:text-h6 font-semibold text-primary">
            PROJECTS
          </h6>
        </div>

        <a
          href="/projects"
          class="underline text-body-sm md:text-[20px] leading-[24px]"
          >See all projects</a
        >
      </div>
    </div>
  </section>

  <section class="mt-4 md:mt-6">
    <div class="container mx-auto px-4 md:px-6">
      <div class="-mr-4 md:-mr-20 overflow-x-auto scrollbar-hide scroll-smooth">
        <div class="flex gap-4 md:gap-6 pr-4 md:pr-6">
          <div class="min-w-[320px] md:min-w-[560px]">
            <ProjectCard
              title="Euphoria Accra"
              subtitle="View projects"
              imageSrc={projectImg1}
              href="/projects"
            />
          </div>
          <div class="min-w-[320px] md:min-w-[560px]">
            <ProjectCard
              title="Livon Health"
              subtitle="Coming soon"
              imageSrc={projectImg2}
            />
          </div>
          <div class="min-w-[320px] md:min-w-[560px]">
            <ProjectCard
              title="New Development"
              subtitle="Coming soon"
              imageSrc={projectImg3}
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-8 md:py-20">
    <div
      class="container mx-auto px-4 md:px-6 flex flex-col md:flex-row justify-between gap-8 md:gap-12"
    >
      <div class="md:w-auto">
        <h6 class="text-body-sm md:text-h6 text-primary uppercase">
          Your property <br />journey simplified
        </h6>
      </div>
      <div class="flex flex-col gap-6 md:gap-10">
        <div
          class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-[80px] max-w-full md:max-w-[727px]"
        >
          <h4 class="text-body-lg md:text-h6 font-semibold text-primary">
            Explore & Select
          </h4>
          <p
            class="text-primary/80 text-body-sm md:text-body leading-body max-w-full md:max-w-[432px]"
          >
            Browse our portfolio of residences, communities, and lifestyle
            spaces. Choose the property that best matches your needs and
            aspirations.
          </p>
        </div>

        <div
          class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-[80px] max-w-full md:max-w-[727px]"
        >
          <h4 class="text-body-lg md:text-h6 font-semibold text-primary">
            Secure & Personalize
          </h4>
          <p
            class="text-primary/80 text-body-sm md:text-body leading-body max-w-full md:max-w-[432px]"
          >
            Work with our team to reserve your property. We'll guide you through
            transparent pricing, flexible payment options, and available
            customization features.
          </p>
        </div>

        <div
          class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-[80px] max-w-full md:max-w-[727px]"
        >
          <h4 class="text-body-lg md:text-h6 font-semibold text-primary">
            Move In & Thrive
          </h4>
          <p
            class="text-primary/80 text-body-sm md:text-body leading-body max-w-full md:max-w-[432px]"
          >
            Receive your keys and start living, working, or investing with
            confidence. Enjoy ongoing support, from property management to
            long-term value growth.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="mt-8 md:mt-12">
    <Image
      src={imageUrl}
      alt="Duston Properties"
      class="w-full h-[300px] md:h-[800px] object-cover"
      width={1440}
      height={800}
    />
  </section>

  <!-- {Insights} -->
  <section class="py-12 md:py-20">
    <div class="container mx-auto px-4 md:px-6">
      <div class="flex items-center gap-3 md:gap-4">
        <span class="size-4 md:size-5 rounded-full bg-secondary shrink-0"
        ></span>
        <h6 class="text-body-lg md:text-h6 font-semibold text-primary">
          Insights
        </h6>
      </div>
      <div class="mt-6 md:mt-10 flex flex-col">
        {
          posts.map((post) => (
            <InsightCard
              tag={post.postTag}
              readTime={"5 min read"}
              title={post.title}
              excerpt={post.excerpt}
              imageSrc={post.coverImage.url}
              slug={post.slug}
            />
          ))
        }
      </div>

      <a
        href="/insights"
        class="bg-primary mx-auto w-max text-white px-5 py-3 font-medium rounded-full flex items-center gap-2 mt-8 md:mt-10"
      >
        Read more insights

        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="text-white"
          ><circle cx="12" cy="12" r="10"></circle><path d="m12 16 4-4-4-4"
          ></path><path d="M8 12h8"></path></svg
        >
      </a>
    </div>
  </section>
</Layout>
