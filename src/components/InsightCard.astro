---
export interface Props {
  tag?: string;
  readTime?: string; // e.g., "5 min read"
  title?: string;
  excerpt?: string;
  imageSrc?: string; // url or /public path
}

const {
  tag = "Project",
  readTime = "5 min read",
  title = "Why Sustainable Design is the Future of Real Estate",
  excerpt = "Today’s homebuyers and investors are looking for more than bricks and mortar — they want healthier, greener communities.",
  imageSrc = "https://images.unsplash.com/photo-1502945015378-0e284ca1a5be?q=80&w=1440&auto=format&fit=crop",
} = Astro.props as Props;
---

<article class="w-full border-b border-[#C0C0C0]/30 py-10">
  <div class="flex justify-between gap-10 items-start">
    <div class="max-w-[520px] flex flex-col">
      <div
        class="flex items-center gap-4 text-primary/80 text-[14px] leading-[20px]"
      >
        <span
          class="inline-flex items-center rounded bg-white text-primary px-2 py-1 text-[12px] leading-[16px] border border-primary/10"
        >
          {tag}
        </span>
        <span>{readTime}</span>
      </div>

      <h3 class="text-h6 mt-4 font-semibold text-primary">
        {title}
      </h3>

      <p class="text-body leading-body text-primary mt-10 line-clamp-4">
        {excerpt}
      </p>
    </div>

    <div class="w-[522px] h-[300px] overflow-hidden rounded">
      <img src={imageSrc} alt={title} class="w-full h-full object-cover" />
    </div>
  </div>
</article>
