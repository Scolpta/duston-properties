---
export interface Props {
  tag?: string;
  readTime?: string; // e.g., "5 min read"
  title?: string;
  excerpt?: string;
  imageSrc?: string; // url or /public path
}

const {
  tag = "Project",
  readTime = "5 min read",
  title = "Why Sustainable Design is the Future of Real Estate",
  excerpt = "Today’s homebuyers and investors are looking for more than bricks and mortar — they want healthier, greener communities.",
  imageSrc = "https://images.unsplash.com/photo-1502945015378-0e284ca1a5be?q=80&w=1440&auto=format&fit=crop",
} = Astro.props as Props;
---

<article class="w-full border-b border-[#C0C0C0]/30 py-6 md:py-10">
  <div
    class="flex flex-col md:flex-row justify-between gap-6 md:gap-10 items-start"
  >
    <div class="max-w-full md:max-w-[520px] flex flex-col order-2 md:order-1">
      <div
        class="flex items-center gap-3 md:gap-4 text-primary/80 text-[12px] md:text-[14px] leading-[20px]"
      >
        <span
          class="inline-flex items-center rounded bg-white text-primary px-2 py-1 text-[11px] md:text-[12px] leading-[16px] border border-primary/10"
        >
          {tag}
        </span>
        <span>{readTime}</span>
      </div>

      <h3
        class="text-body-lg md:text-h6 mt-3 md:mt-4 font-semibold text-primary"
      >
        {title}
      </h3>

      <p
        class="text-body-sm md:text-body leading-body text-primary mt-4 md:mt-10 line-clamp-4"
      >
        {excerpt}
      </p>
    </div>

    <div
      class="w-full md:w-[522px] h-[200px] md:h-[300px] overflow-hidden rounded order-1 md:order-2"
    >
      <img src={imageSrc} alt={title} class="w-full h-full object-cover" />
    </div>
  </div>
</article>
