---
export interface Props {
  title: string;
  subtitle?: string; // e.g., "Type of building"
  imageSrc: string;
  href?: string;
  alt?: string;
}

const {
  title,
  subtitle = "Type of building",
  imageSrc,
  href,
  alt = title,
} = Astro.props as Props;
---

<article class="group rounded overflow-hidden">
  <div class="block">
    <div class="w-full h-[360px] md:h-[820px]">
      <img src={imageSrc} alt={alt} class="w-full h-full object-cover" />
    </div>
    <div class="py-3">
      <h3 class="text-body-lg leading-[32px] font-semibold text-primary">
        {title}
      </h3>
      <a href={href} class="text-body leading-body underline text-primary"
        >{subtitle}</a
      >
    </div>
  </div>
</article>
