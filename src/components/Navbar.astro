---
import logoUrl from "../assets/logo.svg?url";
---

<header
  id="site-header"
  class="w-full px-6 py-5 sticky top-0 z-50 bg-white transition-shadow"
>
  <nav class="container mx-auto flex items-center justify-between">
    <a href="/" class="flex items-center gap-3 no-underline">
      <img src={logoUrl} alt="Duston Properties logo" class="h-7 w-auto" />
    </a>
    <ul class="hidden md:flex items-center gap-10 text-slate-700">
      <li>
        <a class="hover:text-slate-900 transition-colors" href="/about">About</a
        >
      </li>
      <li>
        <a class="hover:text-slate-900 transition-colors" href="/projects"
          >Projects</a
        >
      </li>
      <li>
        <a class="hover:text-slate-900 transition-colors" href="/insights"
          >Insights</a
        >
      </li>
      <li>
        <a class="hover:text-slate-900 transition-colors" href="/sustainability"
          >Sustainability</a
        >
      </li>
      <li>
        <a class="hover:text-slate-900 transition-colors" href="/contact"
          >Contact</a
        >
      </li>
    </ul>
  </nav>
</header>

<script is:inline>
  const header = document.getElementById("site-header");
  const onScroll = () => {
    if (!header) return;
    const scrolled = window.scrollY > 0;
    header.classList.toggle("shadow-sm", scrolled);
  };
  onScroll();
  window.addEventListener("scroll", onScroll, { passive: true });
</script>
