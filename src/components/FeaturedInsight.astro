---
export interface Props {
  tag: string;
  readTime: string;
  title: string;
  excerpt: string;
  imageSrc: string;
}

const { tag, readTime, title, excerpt, imageSrc } = Astro.props as Props;
---

<article class="w-full pb-10">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-start">
    <div class="w-full h-[240px] md:h-[522px] overflow-hidden rounded order-1">
      <img src={imageSrc} alt={title} class="w-full h-full object-cover" />
    </div>

    <div class="max-w-[620px] flex flex-col order-2">
      <div
        class="flex items-center gap-4 text-primary/80 text-[14px] leading-[20px]"
      >
        <span
          class="inline-flex items-center rounded bg-[#EEEEEE] font-semibold px-2 py-1 text-[12px] leading-[16px] border border-primary/10"
        >
          {tag}
        </span>
        <span>{readTime}</span>
      </div>

      <h2 class="text-h5 md:text-h4 mt-4 font-semibold text-primary">
        {title}
      </h2>

      <p class="text-body leading-body text-primary mt-6 md:mt-10">
        {excerpt}
      </p>
    </div>
  </div>
</article>
