---
import type { InsightCategory } from "../lib/insights";

export interface Props {
  categories: InsightCategory[];
}

const { categories } = Astro.props as Props;
---

<div class="w-full flex flex-col gap-4 pb-3">
  <div class="flex items-center gap-6 text-[12px] leading-[16px] md:text-body">
    {
      categories.map((c, i) => (
        <button
          class="text-primary/80 hover:text-primary transition-colors pb-2 border-b-2 border-transparent data-[active=true]:border-secondary data-[active=true]:text-primary"
          data-active={i === 0}
          data-category={c}
          type="button"
        >
          {c}
        </button>
      ))
    }
  </div>

  <div class="relative w-full hidden md:block">
    <input
      type="search"
      placeholder="Search by project type, or project name"
      class="w-full border border-[#C0C0C0]/50 rounded pl-9 pr-3 py-2 text-[14px] leading-[20px] focus:outline-none focus:ring-1 focus:ring-secondary"
    />
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="16"
      height="16"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="absolute left-2 top-1/2 -translate-y-1/2 text-primary/70"
    >
      <circle cx="11" cy="11" r="8"></circle>
      <path d="m21 21-4.3-4.3"></path>
    </svg>
  </div>
</div>
